@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model IEnumerable<MVC_music_store.Models.Genre>

<h2>Welcome to the Music Store</h2>

<h3>@ViewBag.Message</h3>

<ul>
    @foreach (var g in Model)
    {
        <li>@Html.ActionLink(g.Name, "Browse", "Store", new { genre = g.Name }, null)</li>
    }
</ul>